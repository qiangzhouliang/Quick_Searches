<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qzl.quick_searches.MainActivity">

    <ListView
        android:id="@+id/lv_mainactivity_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <com.example.qzl.quick_searches.QuickIndexBar
        android:id="@+id/quickindexbar"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#B51421"/>

    <TextView
        android:id="@+id/tv_mainactivity_flag"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/bg"
        android:textSize="50dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
